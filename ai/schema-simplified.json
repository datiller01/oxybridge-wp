  "treeStructure": {
    "description": "Required tree structure for API requests",
    "notes": [
      "Root id must be integer (typically 1)",
      "Root type must be lowercase 'root'",
      "Root properties MUST be null",
      "Tree MUST have status: 'exported'",
      "Element IDs must be integers (start from 100 for non-root)",
      "Children must have _parentId referencing parent integer ID",
      "Element types use escaped namespace: 'EssentialElements\\\\Heading'",
      "Text content uses double-nested path: content.content.text"
    ],
    "template": {
      "root": {
        "id": 1,
        "data": {
          "type": "root",
          "properties": null
        },
        "children": []
      },
      "status": "exported"
    },
    "elementTemplate": {
      "id": 100,
      "data": {
        "type": "EssentialElements\\Div",
        "properties": {
          "design": {
            "background": { "color": "#ffffff" },
            "spacing": {
              "padding": {
                "top": { "breakpoint_base": "20px" },
                "bottom": { "breakpoint_base": "20px" }
              }
            }
          }
        }
      },
      "children": [],
      "_parentId": 1
    }
  },


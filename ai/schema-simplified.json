    "layout": {
      "description": "Flexbox and Grid layout properties",
      "properties": {
        "display": {
          "type": "enum",
          "values": ["block", "flex", "grid", "inline", "inline-block", "inline-flex", "inline-grid", "none"],
          "default": "block",
          "description": "Display mode",
          "responsive": true,
          "path": "design.layout.display"
        },
        "flexDirection": {
          "type": "enum",
          "values": ["row", "row-reverse", "column", "column-reverse"],
          "default": "row",
          "description": "Direction of flex items",
          "responsive": true,
          "path": "design.layout.flexDirection"
        },
        "justifyContent": {
          "type": "enum",
          "values": ["flex-start", "flex-end", "center", "space-between", "space-around", "space-evenly"],
          "default": "flex-start",
          "description": "Alignment along main axis",
          "responsive": true,
          "path": "design.layout.justifyContent"
        },
        "alignItems": {
          "type": "enum",

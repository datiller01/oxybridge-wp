        "borderAllColor": {
          "type": "color",
          "description": "Border color for all sides",
          "hoverVariant": "borderAllColorHover",
          "responsive": true,
          "path": "design.borders.border.all.color",
          "examples": ["#e0e0e0", "#3b82f6", "rgba(0,0,0,0.1)", "var(--border-color)"]
        },
        "borderTopStyle": { "type": "enum", "values": ["none", "solid", "dashed", "dotted", "double"], "description": "Top border style", "hoverVariant": "borderTopStyleHover", "responsive": true, "path": "design.borders.border.top.style" },
        "borderTopWidth": { "type": "unit", "unit": "px", "description": "Top border width", "hoverVariant": "borderTopWidthHover", "responsive": true, "path": "design.borders.border.top.width" },
        "borderTopColor": { "type": "color", "description": "Top border color", "hoverVariant": "borderTopColorHover", "responsive": true, "path": "design.borders.border.top.color" },
        "borderRightStyle": { "type": "enum", "values": ["none", "solid", "dashed", "dotted", "double"], "description": "Right border style", "hoverVariant": "borderRightStyleHover", "responsive": true, "path": "design.borders.border.right.style" },
        "borderRightWidth": { "type": "unit", "unit": "px", "description": "Right border width", "hoverVariant": "borderRightWidthHover", "responsive": true, "path": "design.borders.border.right.width" },
        "borderRightColor": { "type": "color", "description": "Right border color", "hoverVariant": "borderRightColorHover", "responsive": true, "path": "design.borders.border.right.color" },
        "borderBottomStyle": { "type": "enum", "values": ["none", "solid", "dashed", "dotted", "double"], "description": "Bottom border style", "hoverVariant": "borderBottomStyleHover", "responsive": true, "path": "design.borders.border.bottom.style" },
        "borderBottomWidth": { "type": "unit", "unit": "px", "description": "Bottom border width", "hoverVariant": "borderBottomWidthHover", "responsive": true, "path": "design.borders.border.bottom.width" },
        "borderBottomColor": { "type": "color", "description": "Bottom border color", "hoverVariant": "borderBottomColorHover", "responsive": true, "path": "design.borders.border.bottom.color" },
        "borderLeftStyle": { "type": "enum", "values": ["none", "solid", "dashed", "dotted", "double"], "description": "Left border style", "hoverVariant": "borderLeftStyleHover", "responsive": true, "path": "design.borders.border.left.style" },
        "borderLeftWidth": { "type": "unit", "unit": "px", "description": "Left border width", "hoverVariant": "borderLeftWidthHover", "responsive": true, "path": "design.borders.border.left.width" },
        "borderLeftColor": { "type": "color", "description": "Left border color", "hoverVariant": "borderLeftColorHover", "responsive": true, "path": "design.borders.border.left.color" }
      }
    },

    "background": {
      "description": "Background color and image properties",
      "properties": {
        "backgroundColor": {
          "type": "color",
          "description": "Solid background color",
          "hoverVariant": "backgroundColorHover",
          "responsive": true,
